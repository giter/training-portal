									<a class='item' href='{{queryN $.NewhouseQuickSearchPath "schedule" nil "p" nil}}'>{{.Name}} <i class='icon-close'></i></a>
								{{end}}
							{{end}}
							
							{{range .Letters}}
								{{if queryE $.NewhouseQuickSearchPath "letter" .}}
									<a class='item' href='{{queryN $.NewhouseQuickSearchPath "letter" nil "p" nil}}'> &nbsp;&nbsp;{{upper .}} <i class='icon-close'></i></a>
								{{end}}
							{{end}}
							&nbsp;&nbsp;
							<a href='/newhouse/list.html'>取消全部</a>
						</div>
					</div>
