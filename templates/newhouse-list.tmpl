									<a class='item' href='{{queryN $.NewhouseQuickSearchPath "feature" nil "p" nil}}'>{{.Name}} <i class='icon-close'></i></a>
								{{end}}
							{{end}}
							
							{{range $.CONTEXT.KVs.Schedule.Nodes}}
