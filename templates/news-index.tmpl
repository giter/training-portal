<!DOCTYPE html>
<html>
{{template "lib"}}
{{set . "HTMLComponent" "资讯" }}
{{set . "HTMLTitle" "资讯"}}
{{template "head" .}}
<body>

	{{template "top" .}}
	
	<div id='hd'>

		{{template "brand" .}}

		<div id='nav'>
			<div class='wrap'>
				<ul class='menu'>
					<li class='hoverable clickable active'><a href='/news/'>资讯首页</a></li>
					<li class='hoverable clickable'><a href='#'>专题报道</a></li>
					<li class='hoverable clickable'><a href='#'>各界声音</a></li>
					<li class='hoverable clickable'><a href='#'>成交数据</a></li>
					<li class='hoverable clickable'><a href='#'>独家探盘</a></li>
					<li class='hoverable clickable'><a href='#'><i class='icon-eye'></i> 慧眼看楼</a></li>
				</ul>
			</div>
		</div>
	</div>
	
	<div id='page-news-index'>
		<div id='bd'>
			<div class='section'>
				<div class='left-400-30'>
					<div class='block-news-focus block block-boundless'>
						<div class='hd'>
							<div class='more f16'>{{.Date}} {{.Weekday}}</div>
							<h1>要闻推荐</h1>
						</div>
						<div class='bd f13'>
							{{range slice .Recommends 0 1}}
								<h2 class='l3 bold'><a href='{{.SURL}}'><nobr>{{.Title}}</nobr></a></h2>
								<blockquote class='f12 quote'>{{.Brief}}</blockquote>
							{{ end }}
							<ul>
								{{range slice .Recommends 1 7}}
									<li class='l2'><i class='icon-dot'></i> <a href='{{.SURL}}'>{{.Title}}</a></li>
								{{ end }}
							</ul>
						</div>
					</div>
				</div>
				<div class='right-570'>
					<div class='block block-news-pics block-boundless'>
						<div class='bd'>
							<img src='/images/news/sample.jpg' width=570 height=290 />
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	
	{{template "ft" .}}
	
</body>
</html>
