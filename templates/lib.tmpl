{{define "pager"}}
	{{ if gt .Page.Last 1 }}
	<ul class='pager'>
		{{if eq .Page.Previous 0}}
		{{ else }}
			<li class='{{if eq .Page.Previous 0}}disabled{{end}} hoverable clickable'><a href='{{ queryN $.Page.URL "p" .Page.Previous }}{{if $.Page.Hash}}#{{$.Page.Hash}}{{end}}'>&lt;上一页</a></li>
		{{ end }}
		
		{{ range .Page.List }}
			{{ if eq . 0 }}
				<li class='text'>…</li>
			{{else}}
				<li class='{{if eq . $.Page.Current | not}}hoverable clickable{{end}} {{if eq . $.Page.Current}}active{{end}}'>
					{{if eq . $.Page.Current}}
						{{.}}
					{{else}}
						<a href='{{ queryN $.Page.URL "p" . }}{{if $.Page.Hash}}#{{$.Page.Hash}}{{end}}'>{{.}}</a>
					{{end}}
				</li>
			{{ end }}
		{{ end }}
		{{if eq .Page.Next 0}}
		{{ else }}
			<li class='{{if eq .Page.Next 0}}disabled{{end}} hoverable clickable'><a href='{{ queryN $.Page.URL "p" .Page.Next }}{{if $.Page.Hash}}#{{$.Page.Hash}}{{end}}'>下一页&gt;</a></li>
		{{ end }}
	</ul>
	{{ end }}
{{end}}

